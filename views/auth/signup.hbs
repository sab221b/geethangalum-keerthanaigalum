<script src="/js/signup.js"></script>
<div class="row w-100 h-100 m-0 justify-content-center align-items-center">
    <div class="col-12 col-sm-8 col-md-4 border text-center p-4">
        <form id="signup_form">
            <input type="text" id="_email" placeholder="Email" class="form-control mt-4">
            <input type="password" id="_password" placeholder="Password" class="form-control mt-4">
            <input type="text" id="_phone" placeholder="Phone" class="form-control mt-4">
            <div id="role_selector" class="container px-0 mt-4">
                <select class="text-dark form-control input-lg">
                    <option value="">Select a role</option>
                    <option value="2">Clinic admin</option>
                    <option value="3">Doctor</option>
                    <option value="4">Clinic staff</option>
                    <option value="5">Patient</option>
                </select>
                <i class="text-dark fas fa-caret-down"></i>
            </div>
            <button type="submit" id="user_login" class="btn btn-primary col-12 col-sm-10 col-md-4 mt-4">Signup</button>
        </form>
    </div>
</div>